# AWS Configuration
aws_region = "ap-northeast-1"

# GitHub Configuration
github_username = "your-github-username"

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout     = 30

# SSM Parameter Store paths (optional - uses defaults if not specified)
# ssm_github_token_path                = "github-token"
# ssm_line_channel_access_token_path   = "/grass-canvas/line-channel-access-token"
# ssm_line_user_id_path                = "/grass-canvas/line-user-id"

# Schedule Configuration (UTC)
# Default: 9:00, 12:00, 18:00, 21:00 JST
schedule_times = [
  {
    name   = "morning"
    hour   = "0"   # 9:00 JST
    minute = "0"
  },
  {
    name   = "noon"
    hour   = "3"   # 12:00 JST
    minute = "0"
  },
  {
    name   = "evening"
    hour   = "9"   # 18:00 JST
    minute = "0"
  },
  {
    name   = "night"
    hour   = "12"  # 21:00 JST
    minute = "0"
  }
]
